<body class="dashboard-bg">
    <!-- -------------------------------------------- -->
    <!-- Change of Password form -->
    <!-- -------------------------------------------- -->

    <div class="container visibility add-form" id="view-changepassword-form">
        <img src="../stylesheets/img/close.png" alt="close" class="close-icon" id="close">

        <h2 class="sign-in-header"> Change Pasword</h2>

        <form class="form-pad" action="" method="post">

            <div class="row">
                <div class="col span-1-of-3">
                    <label>Old Password</label>
                </div>
                <div class="col span-2-of-3">
                    <input type="password" name="Password" required>
                </div>

            </div>
            <div class="row">
                <div class="col span-1-of-3">
                    <label>New Password</label>
                </div>
                <div class="col span-2-of-3">
                    <input type="password" name="Password" required>
                </div>

            </div>
            <div class="row">
                <div class="col span-1-of-3">
                    <label> Confirm new password</label>
                </div>
                <div class="col span-2-of-3">
                    <input type="password" name="Password" required>
                </div>

            </div>

            <div class="row">
                <div class="col span-3-of-3 submt-pad">
                    <input class="submit-btn" type="submit" value="Submit">

                </div>
            </div>

        </form>

    </div>


    <!-- -------------------------------------------- -->
    <!-- End of CoP form -->
    <!-- -------------------------------------------- -->





    <!-- -------------------------------------------- -->
    <!-- Body-->
    <!-- -------------------------------------------- -->
    <div id="hide-rest">
        <div class="row" id="hide-rest">
            <h4 class="entry"> All Sessions</h4>
        </div>

        {{#each sessions}}

        <div class="row entry session-pad">

            <div class="col span-4-of-4 ">
                <div class="row">
                    <div class="col span-1-of-2 ">

                        <span class="session-header">
                            <b>
                                <a href="/sessions/{{id}}">
                                    {{title}}
                                </a>
                            </b>
                        </span>
                    </div>
                </div>
                <div class="row">
                    <div class="col span-4-of-4 Session-body">

                        <p class="">{{details}}</p>
                    </div>
                </div>


                <div class="row">
                    <div class="col span-1-of-2">
                        <a href="/sessions/edit/{{id}}" class="dashboard-btn"> Edit</a>
                        <form method="post" action="/sessions/{{id}}?_method=DELETE">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="submit" class="dashboard-btn" value="Delete">
                        </form>
                    </div>
                </div>
            </div>

        </div>



        {{else}}
        <div class="row">
            <div class="col span-1-of-2 ">
                <p class="Session-body"> No sessions yet</p>

            </div>
            <div class="col span-1-of-2 ">


            </div>
        </div>

        {{/each}}



        <div class="clear-fix">
            <div class="space"></div>
        </div>


        <section class="footer-section">
            <footer>
                <div class="row">
                    <p>
                        Copyright &copy; {{currentYear}} by Olamide Samuel. All rights reserved.Privacy policy.
                    </p>
                </div>

            </footer>
        </section>
    </div>
</body>

</html>